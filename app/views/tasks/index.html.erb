<h1>My tasks</h1>

<ul class = "list-unstyled">
  <% @tasks.each do |task| %>

    <li class="mt-3 fs-3 text-decoration-none"><%= task.title %>  <%= link_to "details", task_path(task) %> </li>
    <%= form_with model: task do |t| %>
    <%= t.label "completed?" %>
    <%= t.check_box :completed %>
      <% end %>
  <% end %>

</ul>


<%= link_to "Add task", tasks_new_path %>
